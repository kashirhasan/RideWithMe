<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_uservehicle_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ride.testingform.uservehicle_form">

    <Spinner
        android:id="@+id/VehicleTypeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/VehicleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/VehicleTypeId"
        android:layout_alignStart="@+id/VehicleTypeId"
        android:layout_below="@+id/VehicleTypeId"
        android:ems="10"
        android:hint="Vehicle Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/VehicleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/VehicleNumber"
        android:layout_alignStart="@+id/VehicleNumber"
        android:layout_below="@+id/VehicleNumber"
        android:ems="10"
        android:hint="Vehicle Color"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/VehicleMaxPassenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/VehicleColor"
        android:layout_alignStart="@+id/VehicleColor"
        android:layout_below="@+id/VehicleColor" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/VehicleMaxPassenger"
        android:layout_alignStart="@+id/VehicleMaxPassenger"
        android:layout_below="@+id/VehicleMaxPassenger"
        android:layout_marginTop="25dp"
        android:text="Submit" />

</RelativeLayout>
