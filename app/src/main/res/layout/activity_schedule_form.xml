<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ride.testingform.ScheduleForm">

    <EditText
        android:id="@+id/FromStreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="From Street"
        android:inputType="textPersonName"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/FromArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FromStreet"
        android:ems="10"
        android:hint="From Area"
        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/FromTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FromArea"
        android:ems="10"
        android:hint="From Time"
        android:inputType="time"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ToStreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FromTime"
        android:ems="10"
        android:hint="To Street"

        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ToArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ToStreet"
        android:ems="10"
        android:hint="To Area"
        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/ToTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ToArea"
        android:ems="10"
        android:hint="To Time"
        android:inputType="time"
        android:textAlignment="center" />

    <com.ride.testingform.Extras.MultiSelectionSpinner
        android:id="@+id/Days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ToTime"
        android:layout_alignStart="@+id/ToTime"
        android:layout_below="@+id/ToTime" />


    <Button
        android:id="@+id/ButtonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Days"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/Days"
        android:text="Button" />
</RelativeLayout>
